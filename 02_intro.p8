pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
--picoheads intro

function _init()
	--title
	t="wir entwickeln"
	tx=center_text(t)
	ty=-5
	tty=15 --title target y
	t_done=false --title anim done
	--tagline
	tg="presentiert von picoheads"
	tgx=-100
	tgtx=center_text(tg) --tagline target x
	tgy=26
	tg_done=false --tagline anim done
	--avatars
	mspr=1
	ml="mario"
	mx=-7-(#ml*4)
	mtx=40
	kl="klemens"
	kspr=2
	kx=128+(#kl*4)
	ktx=80
	avy=50
	av_done=false
	--episode
	e="episode #1 - der beginn!"
	ex=0-(#e*4)
	etx=center_text(e) --episode target x
	ey=98
	e_done=false --episode anim done
	--ending
	⧗=120
	endx=0
	endy=0
	
	--music(0)
end

function center_text(_t)
	return (128-(#_t*4))/2
end

function _update60()
	--title animation
	if not t_done then
		local tdy=((tty-ty)/4)*0.4
		ty+=tdy
		if (tdy==0) then
			t_done=true
		end
	end
	
	--tagline animation
	if t_done then
	 if not tg_done then
			local tgdx=((tgtx-tgx)/4)*0.4
			tgx+=tgdx
 		if (tgdx==0) then
				tg_done=true
 		end
		end
	end
	
	--avatars animation
	if tg_done then
		if not av_done then
			local mdx=((mtx-mx)/4)*0.4
			local kdx=((kx-ktx)/4)*0.4
			mx+=mdx
			kx-=kdx
 		if (mdx==0
 					and kdx==0) then
				av_done=true
 		end
		end
	end
	
	--episode animation
	if av_done then
	 if not e_done then
			local edx=((etx-ex)/4)*0.4
			ex+=edx
			if (edx==0) e_done=true
		end
	end
	
	--ending
	if e_done then
		if ⧗>0 then
			⧗-=1
		end
	end
		
end

function _draw()
	cls()
	rectfill(0,0,127,127,1)
	print(t,tx,ty,6) --title
	print(tg,tgx,tgy,6) --tagline
	print(e,ex,ey,6) --tagline
	--mario
	sspr(8,0,7,16,mx,avy)
	print(ml,mx-(#ml*2)+3,avy+18,6)
	--klemens
	sspr(16,0,7,16,kx,avy)
	print(kl,kx-(#kl*2)+3,avy+18,6)
	print(⧗,5,5,15)
 	if ⧗==0 then
 		local _x=0
 		local _y=0
 		for i=0,16384 do
 			pset(_x,_y,8)
 			_x+=1
 			if _x==128 then
 					_x=0
 					_y+=1
 			end
 		end
 	end
end
